{
  "extends": "tsconfig/base",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "exactOptionalPropertyTypes": false,
    "resolveJsonModule": true,
  },
  "include": ["./src/index.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
