---
import { Image } from "astro:assets";
import { changeLanguage } from "i18next";

import SplashColor from "@assets/images/splash-color.svg";
import FolksRouterAdvantagesSection from "@components/folks-router-advantages-section/folks-router-advantages-section.astro";
import HeroSection from "@components/hero-section/hero-section.astro";
import ManageYourAssetsSection from "@components/manage-your-assets-section/manage-your-assets-section.astro";
import WhyFolksRouterSection from "@components/why-folks-router-section/why-folks-router-section.astro";
import BaseLayout from "src/layout/base-layout.astro";

changeLanguage("en");
---

<BaseLayout title="Home">
  <Image
    src={SplashColor}
    alt="Splash Color Image"
    class="hidden tablet:absolute tablet:right-0 tablet:top-0 tablet:block tablet:opacity-30"
  />
  <HeroSection />
  <WhyFolksRouterSection />
  <FolksRouterAdvantagesSection />
  <ManageYourAssetsSection />
</BaseLayout>

<script>
  function handleFooterVisibility() {
    const footer = document.querySelector("footer");
    if (!footer) return;

    footer.classList.remove("invisible");
  }

  handleFooterVisibility();
</script>
