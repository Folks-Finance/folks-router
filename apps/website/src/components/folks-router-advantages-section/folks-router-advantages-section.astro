---
import { t } from "i18next";

import IntegrateIcon from "~icons/folks-router-advantages-icons/integrate.svg";
import LiquidityIcon from "~icons/folks-router-advantages-icons/liquidity.svg";
import RevenueIcon from "~icons/folks-router-advantages-icons/revenue.svg";
---

<section class="bg-base-2 pb-20 tablet:pb-36">
  <div class="layout-container flex flex-col gap-y-10 tablet:gap-y-12">
    <div class="flex w-full flex-col items-center justify-between gap-y-7 tablet:flex-row tablet:gap-y-0">
      <h2 class="w-full text-3xl text-base-content tablet:w-1/3 lg:text-4xl lg:leading-[3rem]">
        {t("folks-router-advantages.title")}
      </h2>
      <p class="w-full text-light-1 tablet:w-5/12 tablet:text-lg">
        {t("folks-router-advantages.paragraph")}
      </p>
    </div>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 lg:gap-x-7">
      <div class="relative flex flex-col gap-y-7 overflow-hidden rounded-2xl border border-light-1/30 bg-base-1 p-7">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-base-2">
          <IntegrateIcon />
        </div>
        <div class="flex flex-col gap-y-2">
          <h3 class="text-xl font-semibold text-base-content">
            {t("folks-router-advantages.card-title-1")}
          </h3>
          <p class="text-light-1">
            {t("folks-router-advantages.card-description-1")}
          </p>
        </div>
        <span class="absolute -bottom-16 -right-16 aspect-square w-32 rounded-full bg-base-3/30"></span>
      </div>
      <div class="relative flex flex-col gap-y-7 overflow-hidden rounded-2xl border border-light-1/30 bg-base-1 p-7">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-base-2">
          <RevenueIcon />
        </div>
        <div class="flex flex-col gap-y-2">
          <h3 class="text-xl font-semibold text-base-content">{t("folks-router-advantages.card-title-2")}</h3>
          <p class="text-light-1">
            {t("folks-router-advantages.card-description-2")}
          </p>
        </div>
        <span class="absolute -bottom-16 -right-16 aspect-square w-32 rounded-full bg-base-3/30"></span>
      </div>
      <div
        class="relative flex flex-col gap-y-7 justify-self-auto overflow-hidden rounded-2xl border border-light-1/30 bg-base-1 p-7 sm:col-span-2 sm:max-w-md sm:justify-self-center lg:col-auto lg:max-w-none"
      >
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-base-2">
          <LiquidityIcon />
        </div>
        <div class="flex flex-col gap-y-2">
          <h3 class="text-xl font-semibold text-base-content">{t("folks-router-advantages.card-title-3")}</h3>
          <p class="text-light-1">
            {t("folks-router-advantages.card-description-3")}
          </p>
        </div>
        <span class="absolute -bottom-16 -right-16 aspect-square w-32 rounded-full bg-base-3/30"></span>
      </div>
    </div>
  </div>
</section>
